<h1>Listing posts</h1>
<h2>Testing the first change</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Tags</th>
    <th>References</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.body %></td>
    <td><%=h post.tags %></td>
    <td><%=h post.references %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
